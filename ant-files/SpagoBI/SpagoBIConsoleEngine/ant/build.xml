				<file name='./spagobi/data/PagingStore.js' />
				<file name='./spagobi/data/MemoryStore.js' />
				<file name='./spagobi/data/Store.js' />
				<file name='./spagobi/data/StoreManager.js' />
				<file name='./spagobi/chart/FusionFreeChart.js' />
